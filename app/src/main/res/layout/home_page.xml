<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/top_menu_lne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/line"
                android:src="@drawable/line1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_menu_lne"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/line"
                android:src="@drawable/line2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/profileIcon"
                android:src="@drawable/profile_image2" />
        </RelativeLayout>

        <TextView
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="@string/hi_adeleke"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "@string/where_would_you_like_to_visit"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:queryHint="find destination"
            app:searchIcon="@drawable/ic_search"
            android:background="@drawable/bg_white_rounded"
            >
        </androidx.appcompat.widget.SearchView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/discover"
                android:layout_height="wrap_content"
                android:text="@string/discover_africa"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                tools:ignore="RelativeOverlap">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/Ellipse_20">

                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangel_121"
                    android:layout_marginStart="3dp"
                    android:contentDescription="@string/rectangle_button">

                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/Ellipse_20"
                    android:layout_marginStart="3dp">

                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/Ellipse_20"
                    android:layout_marginStart="3dp"
                    android:contentDescription="@string/round_button">

                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/Ellipse_20"
                    android:layout_marginStart="3dp"
                    android:contentDescription="@string/round_button">

                </ImageView>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:id="@+id/camel_photo">
                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="169dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camel"
                    android:contentDescription="@string/camel_photo">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cairo"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="100dp"
                    android:textColor="@color/white">

                </TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="120dp">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="50dp"
                        android:id="@+id/gps"
                        android:src="@drawable/gps"
                        android:layout_marginStart="20dp"
                        android:contentDescription="gps">

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/egpyt"
                        android:layout_marginStart="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="@dimen/dimension_20dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@id/gps">

                    </TextView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:id="@+id/girl_2"
                android:layout_toEndOf="@id/camel_photo"
                android:layout_marginStart="25dp">
                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="169dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/girl2"
                    android:contentDescription="@string/camel_photo">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/nairobi"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="100dp"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="120dp">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="50dp"
                        android:id="@+id/gps"
                        android:src="@drawable/gps"
                        android:layout_marginStart="20dp"
                        tools:ignore="DuplicateIds"
                        android:contentDescription="@string/gps">

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kenya"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/dimension_20dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@id/gps">

                    </TextView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/popular_destination"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="10dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="5dp">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cairo"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cairo_cardview"
            android:contentDescription="@string/cairo_description">

        </ImageView>

        <TextView
            android:id="@+id/title_cairo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cairo"
            android:text="@string/cairo_view"
            android:textColor="@color/black"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/country_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_cairo"
            android:layout_toEndOf="@id/cairo"
            android:text="@string/egypt"
            android:textColor="#3913B8"
            android:textSize="15sp">

        </TextView>

        <ImageView
            android:id="@+id/love_icon_cairo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/loveImage">

        </ImageView>

        <TextView
            android:id="@+id/country_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/country_description"
            android:layout_toEndOf="@id/cairo"
            android:text="@string/cairoDescription">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/country_story"
            android:layout_toEndOf="@+id/cairo"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star_one_cairo"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/StarBright">

            </ImageView>

            <ImageView
                android:id="@+id/star_two_cairo"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/StarBright">

            </ImageView>

            <ImageView
                android:id="@+id/star_three_cairo"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/StarBright">

            </ImageView>

            <ImageView
                android:id="@+id/star_four_cairo"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/StarBright">

            </ImageView>

            <ImageView
                android:id="@+id/star_five_cairo"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/star_dull">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/rating"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/rating_votes"
                android:textColor="@color/black">

            </TextView>


        </LinearLayout>


    </RelativeLayout>

    </androidx.cardview.widget.CardView>


